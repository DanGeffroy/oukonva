---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Service worker registration. -->
    <script is:inline src="/registerSW.js"></script>
    <link rel="manifest" href="/oukonva/manifest.webmanifest" />
    <title>{title}</title>
  </head>
  <body class="text-black dark:text-slate-100 bg-slate-200 dark:bg-slate-900">
    <slot />
    <script>
      // This is a hack to get vite-plugin-pwa to generate a sw.js file.
      // Do not remove this script tag.
    </script>
  </body>
</html>
